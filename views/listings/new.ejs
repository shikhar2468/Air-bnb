<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br /> <br />
            <h3>Create a new listing</h3>
            <form method = "POST" action = "/listings" novalidate class="needs-validation" enctype="multipart/form-data">   
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Enter a catchy Title" type="text" class="form-control" required/>
                    <div class="valid-feedback">Title looks good</div>
                </div>
                <br />   <br />
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name = "listing[description]" placeholder = "Enter Description" type = "text" class="form-control" required></textarea>
                </div>
                <br /> <br />
                <div class="mb-3">
                    <label for="Image" class="form-label">Upload Listing Image</label>
                    <input name="listing[image]" type="file" class="form-control" required />
                </div>
                <br />  <br />
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="Price" class="form-label">Price</label>
                        <input name = "listing[price]" placeholder = "1200" class="form-control" required/>
                        <div class="invalid-feedback">Enter a valid price</div>
                    </div>
                    <br/>  <br/>
                    <div class="mb-3  col-md-8">
                        <label for="Country" class="form-label">Country</label>
                        <input name =  "listing[country]" placeholder = "India" type =  "text" class="form-control" required/>
                        <div class="invalid-feedback">Enter a valid country</div>
                    </div>
                </div>
                <br /> <br />
                <div class="mb-3">
                    <label for="Location" class="form-label">Location</label>
                    <input name = "listing[location]" placeholder = "Dehradun" type = "text" class="form-control" required/>
                    <div class="invalid-feedback">Enter a valid locationS</div>
                </div>
                <br /> <br />
                <button class="btn btn-dark add-btn mt-3">ADD</button>
                <br /> <br />
            </form> 
        </div>
    </div>

</body>



    